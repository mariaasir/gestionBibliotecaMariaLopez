<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="miUnidad">

        <class>DTOS.Ejemplar</class>
        <class>DTOS.Libro</class>
        <class>DTOS.Prestamo</class>
        <class>DTOS.Usuario</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/biblioteca"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="maria"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
        </properties>
    </persistence-unit>
</persistence>
